{
  "name": "echidna",
  "displayName": "Echidna",
  "description": "Discover the contributions of every team member with ease using this Visual Studio Code extension.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Echidna",
      "properties": {
        "echidna.OpenAIKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key"
        },
        "echidna.OpenAIDefaultModel": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "OpenAI Default Model"
        },
        "echidna.OpenAIDefaultTemperature": {
          "type": "number",
          "default": 0.5,
          "description": "OpenAI Default Temperature"
        },
        "echidna.OpenAIUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1/chat/completions",
          "description": "OpenAI API URL"
        }
      }
    },
    "commands": [
      {
        "command": "echidna.summary",
        "title": "Summary"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "echidna",
          "title": "Echidna",
          "icon": "resources/echidna.svg"
        }
      ]
    },
    "views": {
      "echidna": [
        {
          "id": "echidna",
          "name": "Echidna",
          "icon": "resources/echidna.svg",
          "contextualTitle": "Echidna"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "echidna.summary",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chatgpt": "^5.2.5",
    "gpt-tokenizer": "^2.1.2",
    "simple-git": "^3.20.0"
  }
}
